<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SwingSyncAI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/golf_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/golf_blue</item>
        <item name="colorTertiary">@color/golf_gold</item>
        <item name="android:statusBarColor">@color/golf_green</item>
        <item name="android:navigationBarColor">@color/golf_surface</item>
    </style>

    <style name="Theme.SwingSyncAI.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/golf_green</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.SwingSyncAI</item>
    </style>
</resources>