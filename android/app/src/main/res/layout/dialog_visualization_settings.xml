<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/golf_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Visualization Settings"
            android:textColor="@color/golf_on_surface"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Display Options Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Display Options"
            android:textColor="@color/golf_on_surface"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Show Trails Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Show Swing Trails"
                android:textColor="@color/golf_on_surface"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/show_trails_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:thumbTint="@color/golf_green"
                android:trackTint="@color/golf_green_light" />

        </LinearLayout>

        <!-- Show Skeleton Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Show Skeleton"
                android:textColor="@color/golf_on_surface"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/show_skeleton_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:thumbTint="@color/golf_green"
                android:trackTint="@color/golf_green_light" />

        </LinearLayout>

        <!-- Show Phase Markers Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Show Phase Markers"
                android:textColor="@color/golf_on_surface"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/show_phase_markers_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:thumbTint="@color/golf_green"
                android:trackTint="@color/golf_green_light" />

        </LinearLayout>

        <!-- Animation Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Animation"
            android:textColor="@color/golf_on_surface"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Animation Speed -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Animation Speed"
            android:textColor="@color/golf_on_surface"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/animation_speed_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:max="300"
            android:min="50"
            android:progress="100"
            android:progressTint="@color/golf_green"
            android:thumbTint="@color/golf_green" />

        <!-- Comparison Mode -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Comparison Mode"
            android:textColor="@color/golf_on_surface"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/comparison_mode_spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/spinner_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Appearance Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Appearance"
            android:textColor="@color/golf_on_surface"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Color Scheme -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Color Scheme"
            android:textColor="@color/golf_on_surface"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/color_scheme_spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/spinner_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Export Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Export Settings"
            android:textColor="@color/golf_on_surface"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Export Quality -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Export Quality"
            android:textColor="@color/golf_on_surface"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/export_quality_spinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/spinner_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/reset_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Reset to Default"
                android:textColor="@color/golf_on_surface" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Settings"
                app:backgroundTint="@color/golf_green"
                app:cornerRadius="24dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>