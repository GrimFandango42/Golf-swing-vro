# SwingSync AI Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# Security Configuration
SECRET_KEY=your_secret_key_here_at_least_32_characters_long
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DATABASE_URL=sqlite:///./swingsync_personal.db

# AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
# Get your API key from: https://makersuite.google.com/app/apikey
# Key format: starts with "AIza" and is 39 characters long

# Optional AI Configuration
# OPENAI_API_KEY=your_openai_api_key_here

# Development Settings
DEBUG=false
LOG_LEVEL=INFO

# Application Settings
MAX_CONCURRENT_USERS=5
ENABLE_ANALYTICS=true
ENABLE_VOICE_COACHING=true

# Mobile-specific settings (if using mobile deployment)
MOBILE_MODE=false

# Security Notes:
# - Never commit your actual .env file to version control
# - Keep your API keys secure and don't share them publicly
# - Regenerate keys if you suspect they've been compromised
# - Use different keys for development and production environments