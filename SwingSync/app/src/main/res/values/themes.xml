<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.SwingSync" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/golf_green</item>
        <item name="colorPrimaryVariant">@color/golf_green_dark</item>
        <item name="colorSecondary">@color/golf_blue</item>
        <item name="colorSecondaryVariant">@color/golf_blue_dark</item>
        <item name="colorAccent">@color/accent_orange</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    
    <!-- No Action Bar theme for full screen activities -->
    <style name="Theme.SwingSync.NoActionBar" parent="Theme.SwingSync">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Full screen theme for camera activity -->
    <style name="Theme.SwingSync.FullScreen" parent="Theme.SwingSync.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>