<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude all sensitive data from cloud backup -->
        <exclude domain="database" />
        <exclude domain="sharedpref" />
        <exclude domain="file" path="recordings/" />
        <exclude domain="file" path="cache/" />
        <exclude domain="file" path="temp/" />
        <exclude domain="file" path="secure_prefs/" />
        <exclude domain="file" path="user_data/" />
        <exclude domain="file" path="swing_analysis/" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Exclude sensitive data from device transfer -->
        <exclude domain="database" />
        <exclude domain="sharedpref" />
        <exclude domain="file" path="recordings/" />
        <exclude domain="file" path="secure_prefs/" />
        <exclude domain="file" path="user_data/" />
    </device-transfer>
</data-extraction-rules>