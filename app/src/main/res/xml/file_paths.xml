<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Internal storage only - no external storage access -->
    <files-path name="internal_files" path="." />
    <cache-path name="internal_cache" path="." />
    
    <!-- Secure recordings directory with restricted access -->
    <files-path name="recordings" path="recordings/" />
    
    <!-- Temporary files for analysis with auto-cleanup -->
    <cache-path name="temp" path="temp/" />
    
    <!-- Secure backup directory -->
    <files-path name="backup" path="backup/" />
    
    <!-- Encrypted exports directory -->
    <files-path name="exports" path="exports/" />
</paths>